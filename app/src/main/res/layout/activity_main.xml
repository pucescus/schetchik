<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/header"
        android:gravity="center"
        android:text="АНАЛИЗ ТЕКСТА"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#5D9111"
        android:layout_marginTop="14dp"
        android:layout_width="350dp"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:gravity="center"
        android:textColor="#215302"
        android:padding="14dp"
        android:textStyle="italic"
        android:hint="Введите текст"
        android:textColorHint="#254C02"
        android:background="#8ACAEC7B"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <Button
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:textColor="#9ED592"
        android:text="Обработать ;p"
        android:backgroundTint="#1E4204"
        android:textSize="17sp"
        android:layout_marginTop="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input" />

    <EditText
        android:id="@+id/output"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:hint="Ваш ответ ;p"
        android:textColorHint="#254C02"
        android:gravity="center"
        android:textSize="19sp"
        android:textColor="#254C02"
        android:background="#8ACAEC7B"
        android:padding="14dp"
        android:textStyle="italic"
        android:layout_marginTop="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />



</androidx.constraintlayout.widget.ConstraintLayout>